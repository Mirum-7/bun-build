{
  "name": "@mirum7/bun-build",
  "version": "1.4.1",
  "description": "A simple build tool for Bun",
  "module": "dist/index.js",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./types/types.d.ts"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mirum-7/bun-build.git"
  },
  "private": false,
  "bin": {
    "bun-build": "./dist/index.js"
  },
  "scripts": {
    "build": "bun src/index.ts && bunx --bun tsc",
    "prepublishOnly": "bun run build"
  },
  "types": "types/types.d.ts",
  "files": [
    "types/**/*.d.ts",
    "dist/index.js"
  ],
  "keywords": [
    "bun",
    "build",
    "bundler",
    "typescript"
  ],
  "author": "mirum7",
  "license": "ISC",
  "dependencies": {
    "bun-build": "link:bun-build"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
